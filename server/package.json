{
    "name": "movie-book",
    "version": "1.0.0",
    "description": "Backend Of the MovieBook App",
    "main": "src/server.ts",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist/* && npx tsc",
        "test": "NODE_ENV=test jest --config jest.config.ts --detectOpenHandles --coverage --maxWorkers=1",
        "prestart": "npm run build",
        "start": "node dist/server.js",
        "devTS": "NODE_ENV=development NODE_OPTIONS='--loader ts-node/esm' ts-node -r tsconfig-paths/register src/server.ts",
        "preprod": "npm run build",
        "nodemon": "nodemon",
        "prod": "NODE_ENV=production node dist/server.js",
        "local": "tsc-watch --onSuccess='nodemon dist/server.js' --watch src,server.ts"
    },
    "keywords": [],
    "author": "Utsav Kachchhi, Harshvardhan Makwana, Dodi Tank",
    "license": "ISC",
    "devDependencies": {
        "@prisma/client": "^5.15.1",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.14.2",
        "@types/nodemailer": "^6.4.15",
        "@types/serve-favicon": "^2.5.7",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "prisma": "^5.15.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "handlebars": "^4.7.8",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^6.9.14",
        "serve-favicon": "^2.5.0"
    },
    "prisma": {
        "schema": "./src/Model/schema.prisma"
    }
}
