{
  "name": "movie-book",
  "version": "1.0.0",
  "description": "Backend Of the MovieBook App",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/* && npx tsc",
    "test": "jest --config jest.config.ts --detectOpenHandles --coverage --maxWorkers=1",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "dev": "NODE_ENV=development tsc --watch --onSuccess='nodemon dist/server.js'",
    "prod": "NODE_ENV=production npm run build && node dist/server.js",
    "local": "tsc-watch --onSuccess='nodemon dist/server.js' --watch src,server.ts"
  },
  "keywords": [],
  "author": "Utsav Kachchhi, Harshvardhan Makwana, Dodi Tank",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  }
}
